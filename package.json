{
    "name": "astro-template",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "engines": {
        "node": ">=16.12.0",
        "yarn": "please-use-npm",
        "npm": ">=8.1.0"
    },
    "scripts": {
        "dev": "astro dev --host",
        "build": "astro build",
        "preview": "astro preview --host",
        "astro": "astro",
        "lint:eslint": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"src/**/*.{js,ts,astro}\"",
        "lint:stylelint": "stylelint --cache -q \"**/*.{css,astro}\"",
        "lint:prettier": "prettier --check \"**/*.{js,ts,json,astro,html,css}\"",
        "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "prepare": "husky install"
    },
    "dependencies": {
        "astro": "^2.0.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-astro": "^0.23.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^7.0.0",
        "postcss-html": "^1.5.0",
        "prettier": "^2.8.3",
        "prettier-plugin-astro": "^0.8.0",
        "stylelint": "^14.16.1",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-standard": "^29.0.0"
    }
}
